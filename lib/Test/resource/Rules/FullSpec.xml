<?xml version="1.0" ?>
<phpsemver
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../etc/phpsemver.xsd"
        title="Full config example">
    <RuleSet name="first">
        <Trigger>
            <Classes>
                <IsRemoved/>
                <Methods>
                    <ReturnTypeRemoved />
                    <IsRemoved />
                </Methods>
            </Classes>
            <Functions>
                <IsRemoved/>
            </Functions>
        </Trigger>
    </RuleSet>
    <RuleSet name="second">
        <Trigger>
            <Classes>
                <IsAdded/>
                <Methods>
                    <ReturnTypeChanged />
                    <IsAdded />
                </Methods>
            </Classes>
            <Functions>
                <IsAdded/>
            </Functions>
        </Trigger>
    </RuleSet>
    <RuleSet name="patch">
        <Trigger>
            <Functions>
                <BodyChanged />
            </Functions>
        </Trigger>
    </RuleSet>
    <RuleSet name="last">
    </RuleSet>
    <Filter>
        <Blacklist>
            <Pattern>^pattern-test/blacklist/.*</Pattern>
        </Blacklist>
        <Whitelist>
            <Pattern>^bin/phpsemver$</Pattern>
            <Pattern>^lib/.*</Pattern>
            <Pattern>^pattern-test/whitelist/.*</Pattern>
        </Whitelist>
    </Filter>
</phpsemver>